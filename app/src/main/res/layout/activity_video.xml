    <ImageView
        android:id="@+id/tamil1"
        android:layout_width="400dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/tamil2" />

    <Button
        android:id="@+id/tamil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/videobutton"
        android:text="Play"
        android:textColor="@android:color/black"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:text="Bangalore"
        android:textColor="@android:color/black"
        android:textSize="30sp" />
    <ImageView
        android:id="@+id/Bang"
        android:layout_width="400dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/b6" />

    <Button
        android:id="@+id/bangalore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/videobutton"
        android:text="Play"
        android:textColor="@android:color/black"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:text="Kerala"
        android:textColor="@android:color/black"
        android:textSize="30sp" />
    <ImageView
        android:id="@+id/kerala"
        android:layout_width="400dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/k2" />

    <Button
        android:id="@+id/kerala1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/videobutton"
        android:text="Play"
        android:textColor="@android:color/black"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:text="India Tourisim"
        android:textColor="@android:color/black"
        android:textSize="30sp" />
    <ImageView
        android:id="@+id/Indialove"
        android:layout_width="400dp"
